	<script type="text/javascript">
			var wrap=document.getElementById("wrap");
			var right=document.getElementById("right_arrow");//拿到右侧按钮的控制权
			var left=document.getElementById("left_arrow");//拿到左侧按钮的控制权
		
			wrap.onmouseover=function(){
						right.style.display="block";
				        left.style.display="block";
				    }//左右按钮显示函数
			wrap.onmouseout=function(){
						right.style.display="none";
				        left.style.display="none";
					}//左右按钮消失函数
			var pic=document.getElementById("pic");//拿到图片的控制权
			var list=document.getElementById("list").getElementsByTagName("li");//拿到li标签的控制权
			var index=0;
			var time=null;//存放计时器返回的值
			
			function auto(){
				time=setInterval(function(){
					index=(index+1)%5;
					change(index)
					},2000)
			}//计时器每隔2s自动轮播
			auto();
			right.onclick=function(){
				change((index+1)%5)
			}
			left.onclick=function(){
				if(index==0)
					change(4);
				else
					change(index-1);
			}
			function change(curIndex){
				pic.style.marginTop=-340*curIndex+"px";//实现图片的切换
				for(var i=0;i<list.length;i++){//循环遍历每一个数字按钮
					list[i].className="";
				}
				list[curIndex].className="on";//与当前图片数字按钮对应
				index=curIndex;
			}
			pic.onmouseover=function(){
				pic.style.cursor="pointer";
				clearInterval(time);
			}//当鼠标放在图片上时，清空计时器，轮播停止
			pic.onmouseout=auto;//鼠标离开图片，轮播继续
			right.onmouseover=function(){
				right.style.cursor="pointer";
				clearInterval(time);
			}//当鼠标放在右侧按钮上时，清空计时器，轮播停止
			right.onmouseout=auto;//鼠标离开按钮，轮播继续
			left.onmouseover=function(){
				left.style.cursor="pointer";
				clearInterval(time);
			}
			left.onmouseout=auto;
			
			for(var i=0;i<list.length;i++){
				list[i].id=i;
				list[i].onmouseover=function(){
				change(this.id)
				}//当鼠标放在按钮上时会轮播到所对应的图片
			}
			
			
			
			
			
			
			var tabs=document.getElementById("tab").getElementsByTagName("li");
			var divs=document.getElementById("content").getElementsByTagName("div");
			
			for(var i=0;i<tabs.length;i++){
				tabs[i].onmouseover=function(){
					change2(this)
				}
			}
			
			function change2(obj){
				for(var i=0;i<tabs.length;i++){
					if(tabs[i]==obj){
						tabs[i].className="show";
						divs[i].className="selected";
					}
					else{
						tabs[i].className="";
						divs[i].className="";
					}
			
				}
					
			}
	</script>
</html>
